	= csrf_meta_tags

%body
	%nav.navbar.navbar-default
		.navbar-brand= link_to "Liste des placements", root_path

		%ul.nav.navbar-nav.navbar-right
			%li= link_to "Nouveau placement", new_placement_path
			%li= link_to "Se d√©connecter", root_path

	.container
		- flash.each do |name, msg|
			= content_tag :div, msg, class: "alert"

		= yield